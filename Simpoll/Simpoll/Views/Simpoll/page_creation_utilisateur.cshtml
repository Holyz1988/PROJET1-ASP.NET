
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Page D'accueil</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link href="https://fonts.googleapis.com/css?family=Francois+One" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
</head>

<body class="jolie">
    <nav class="container-fluid navbar navbar-expand-lg navbar-dark bg-dark justify-content-end">
        <ul class="nav justify-content-end">
            <li class="nav-item">
                <div class="form-inline">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0 text-light" type="submit">Search</button>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light">Sign In</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light">|</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light">Sign Out</a>
            </li>
        </ul>
    </nav>
    <header class="container">
        <a href="/Simpoll/CreationUtilisateur"><img src="/Content/simpoll.png" alt="Logo Simpoll" /></a>
        <h1 class="title">Creating your survey has never been so Simpoll.</h1>
    </header>
    <section class="container">   
        <form action="FormulaireUtilisateur" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Nom</label>
                <input type="text" name="nomCreateur" class="form-control col-lg-6" aria-describedby="emailHelp" placeholder="Saisissez votre Nom">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Prénom</label>
                <input type="text" name="prenomCreateur" class="form-control col-lg-6" placeholder="Saisissez votre Prénom">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Email</label>
                <input type="email" name="emailCreateur" class="form-control col-lg-6" placeholder="Saisissez votre Email">
            </div>
            <button type="submit" class="btn btn-primary">Créer votre sondage</button>
            </form>
</section>
    <footer></footer>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
</body>
</html>
