@model int?
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Création de sondage</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="https://fonts.googleapis.com/css?family=Francois+One" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/style.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
</head>
<body class="jolie">
    <nav class="container-fluid navbar navbar-expand-lg navbar-dark bg-dark justify-content-end">
        <ul class="nav justify-content-end">
            <li class="nav-item">
                <div class="form-inline">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0 text-light" type="submit">Search</button>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light">Sign In</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light">|</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light">Sign Out</a>
            </li>
        </ul>
    </nav>
    <header class="container">
        <a href="/Simpoll/CreationUtilisateur"><img src="/Content/simpoll.png" alt="Logo Simpoll" /></a>
    </header>
    <section class="container">
        <form action="/Simpoll/CreationSondage" method="post">
            <input type="hidden" name="idCreateur" value="@Model" />
            <div id="dynamicInput">
                <div class="form-group">
                    <input type="text" class="form-control col-lg-6" name="question" placeholder="Saisir une question" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control col-lg-6" name="choix" placeholder="Saisir un choix de réponse" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control col-lg-6" name="choix" placeholder="Saisir un choix de réponse" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control col-lg-6" name="choix" placeholder="Saisir un choix de réponse" />
                </div>
            </div>
            <div>
                <input type="button" class="btn btn-warning" value="Ajouter un choix de réponse" onClick="addInput('dynamicInput');">
            </div>
            <script type="text/javascript">
                var nbInputInitial = 3;
                var limit = 15;

                function addInput(divName)
                {
                    if (nbInputInitial == limit)
                    {
                        alert("Vous avez atteint la limite de " + nbInputInitial + " choix possibles");
                    }
                    else
                    {
                        var newdiv = document.createElement('div');
                        newdiv.innerHTML = "<div class='form-group'><input type='text' class='form-control col-lg-6'" +
                                           "name='choix' placeholder='Saisir un choix de réponse' /></div>";
                        document.getElementById(divName).appendChild(newdiv);
                        nbInputInitial++;
                    }
                }
            </script>
            <div>
                <label class="custom-control custom-radio">
                    <input type="radio" id="radio1" name="typeChoix" value="choix_unique" class="custom-control-input" checked>
                    <span class="custom-control-indicator"></span>
                    <span class="custom-control-description">Choix unique</span>
                </label>
                <label class="custom-control custom-radio">
                    <input type="radio" id="radio2" name="typeChoix" value="choix_multiple" class="custom-control-input">
                    <span class="custom-control-indicator"></span>
                    <span class="custom-control-description">Choix multiple</span>
                </label>
            </div>
            <div class="row">
                <div class="col-lg-2">
                    <button type="submit" class="btn btn-block btn-primary">Valider le sondage</button>
                </div>
                <div class="col-lg-2">
                </div>
                <div class="col-lg-2">
                    <a href="/Simpoll/CreationUtilisateur" type="button" class="btn btn-block btn-dark justify-content-end">Page d'accueil</></a>
                </div>
            </div>
        </form>
    </section>
    <footer></footer>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
</body>
</html>
