@model Simpoll.Models.Sondage
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
</head>

<body>
    <nav class="container-fluid navbar navbar-expand-lg navbar-dark bg-dark justify-content-end">
        <ul class="nav justify-content-end">
            <li class="nav-item">
                <form class="form-inline">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </li>
            <li class="nav-item">
                <a class="nav-link">Sign In</a>
            </li>
            <li class="nav-item">
                <a class="nav-link">|</a>
            </li>
            <li class="nav-item">
                <a class="nav-link">Sign Out</a>
            </li>
        </ul>
    </nav>
    <header class="container">
        <img src="/Content/simpoll.png" alt="Logo Simpoll" />
    </header>
    <section class="container">
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Attention !</h1>
                <p class="lead">Garder précieusement le lien de suppression du sondage.</p>
            </div>
        </div>    
            <div class="form-group row">
                <label for="URLSuppression" class="col-sm-2 col-form-label">Supprimer le sondage </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.UrlSuppression">
                </div>
            </div>
            <div class="form-group row">
                <label for="URLPartage" class="col-sm-2 col-form-label">Partager le sondage </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.UrlPartage">
                </div>
            </div>
            <div class="form-group row">
                <label for="URLResultat" class="col-sm-2 col-form-label">Accéder aux résultats</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.UrlResultat">
                </div>
            </div>
            <div>
                <a href="/Simpoll/Vote?idSondage=@Model.IdSondage" class="btn btn-primary" role="button">Votez</a>
                <a href="/Simpoll/Resultat?idSondage=@Model.IdSondage" type="button" class="btn btn-primary" role="button">Résultats</a>
                <a href="/Simpoll/DesactiverSondage?myGuid=@Model.Guid" class="btn btn-danger justify-content-end" role="button">Supprimer</a>
            </div>
    </section>
    <footer></footer>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
</body>
</html>